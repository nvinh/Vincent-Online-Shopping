@model List<OnlineShop3.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter {
    <script src="/Assets/Client/js/controller/cartController.js"></script>
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Cart items</h3>
        </div>
        <div class="see">
            <p><a href="/Products/">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Product ID</td>
                        <td>Product Name</td>
                        <td>Image</td>
                        <td>Quantity</td>
                        <td>Unit Price</td>
                        <td>Total Amount</td>
                        <td>Delete item</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Images" width="100" height="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@(item.Product.Price.GetValueOrDefault(0).ToString("N0"))</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            //Using ajax & jQuery
            <button id="btnContinue" class="btn">Continue shopping</button>
            <button id="btnUpdate" class="btn">Update cart</button>
            <button id="btnDeleteAll" class="btn">Delete cart</button>
            <button id="btnPayment" class="btn">Complete order</button>
        }
        else
        {
            <span class="alert alert-danger">"There is no item in your cart."</span>
        }
        
        </div>
    </div>

        

