
@{
    //ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Models.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<Models.EF.Product>)ViewBag.NewProducts;
    var listFeatureProducts = (List<Models.EF.Product>)ViewBag.FeatureProducts;
}
@section slide{
<div class="header_slide">
    <div class="header_bottom_left">
        <div class="categories">
            @{ Html.RenderAction("ProductCategory", "Product");}
        </div>
    </div>
    <div class="header_bottom_right">
        <div class="slider">
            <div id="slider">
                <div id="mover">
                    @foreach (var item in slides)
                    {
                        <div class="slide">
                            <div class="slider-img">
                                <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
                            </div>
                            <div class="slider-text">
                                <h1>MSA 2016<br><span>DEMO</span></h1>
                                <h2>Admin area:</h2>
                                <div class="features_list">
                                    <h4>URL: +/Admin/Login/</h4><p>
                                    User: admin; Pass: 123
                                    </p>
                                    <h4>Git: github.com/nvinh/VincentMSA2016</h4>
                                    <script src="~/Assets/Client/ts/app/tsapi.js"></script>
                                    <div id="message"></div>
                                    <div>
                                        @*Compiler: <input id="compiler" value="TypeScript" onkeyup="document.getElementById('message').innerText = sayHello()" /><br />*@
                                        Framework: <input id="framework" value="ASP.NET" onkeyup="document.getElementById('message').innerText = sayHello()" /><br />
                                        With the support from JQuery, Boostrap, Ajax, TypeScript, etc.<br />
                                        Codes for Facebook login, Google map, Google e-mail, Capcha, AddThis, etc. are implemented.<br />
                                    </div>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    }
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>New Products</h3>
        </div>
        <div class="see">
            <p><a href="/Products/">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listNewProducts)
        {
            var url = "/ProductDetail/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Images" alt="@item.Name" width="212" height="212" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">$@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Ask us")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/addtocart?productId=@item.ID&quantity=1">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }
    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Feature Products</h3>
        </div>
        <div class="see">
            <p><a href="#">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in listFeatureProducts)
        {
            var url = "/ProductDetail/" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Images" alt="@item.Name" width="212" height="212" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">$@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Ask us")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/addtocart?productId=@item.ID&quantity=1">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>

